<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--    system variable-->
    <property name="LOGS" value="./logs"/>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <!--    if default profile log to console-->

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss}  - %m%n
            </Pattern>
        </layout>
    </appender>

    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/events-logger.log</file>
        <encoder
            class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} - %m%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGS}/archived/events-logger-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- each archived file, size max 10MB -->
                <maxFileSize>100MB</maxFileSize>

            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- total size of all archive files, if total size > 20GB, it will delete old archived file -->
            <totalSizeCap>1000GB</totalSizeCap>
            <!-- 60 days to keep -->
            <maxHistory>365000</maxHistory>
        </rollingPolicy>
    </appender>
    <springProfile name="default|melleji|kajilo|mike|uat|arthur">
        <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
        <root level="info">
            <appender-ref ref="Console"/>
        </root>
        <logger name="com.api.*" level="trace" additivity="false">
            <appender-ref ref="Console"/>
        </logger>
        <logger name="com.*" level="trace" additivity="false">
            <appender-ref ref="Console"/>
        </logger>
<!--        <logger name="org.hibernate.type.descriptor.sql" level="trace" additivity="false">-->
<!--            <appender-ref ref="Console"/>-->
<!--        </logger>-->
<!--        <logger name="org.hibernate.SQL_SLOW" level="trace" additivity="false">-->
<!--            <appender-ref ref="Console"/>-->
<!--        </logger>-->
<!--        <logger name="org.hibernate.stat" level="trace" additivity="false">-->
<!--            <appender-ref ref="Console"/>-->
<!--        </logger>-->
        <logger name="org.hibernate.tool.hbm2ddl" level="trace" additivity="false">
            <appender-ref ref="Console"/>
        </logger>

<!--        <logger name="com.zaxxer.hikari" level="debug" additivity="false">
            <appender-ref ref="Console"/>
        </logger>  -->
    </springProfile>
    <!--    if prod profile log to file> -->
    <springProfile name="prod">
        <!-- LOG everything at INFO level -->
        <root level="info">
            <appender-ref ref="RollingFile"/>
            <appender-ref ref="Console"/>
        </root>
<!--        <logger name="org.springframework.web" level="DEBUG"> <appender-ref ref="Console"/></logger>-->
<!--        <logger name="org.springframework.web.servlet" level="DEBUG"> <appender-ref ref="Console"/></logger>-->
<!--        <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="DEBUG"> <appender-ref ref="Console"/></logger>-->

        <!-- Set Hikari log level to DEBUG -->
<!--        <logger name="com.zaxxer.hikari" level="DEBUG" > <appender-ref ref="Console"/></logger>-->
<!--        <logger name="com.zaxxer.hikari.HikariConfig" level="DEBUG" > <appender-ref ref="Console"/></logger>-->
<!--        <logger name="com.zaxxer.hikari.HikariDataSource" level="DEBUG" > <appender-ref ref="Console"/></logger>-->
    </springProfile>
</configuration>
